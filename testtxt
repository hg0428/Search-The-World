        function _imgError(el){
            if(el){
                console.log(`[IMG-ERR | HANDLED](${el.id})`);
                el.src = '/media/root/logo.png'
            } else {
                console.warn(`[IMG-ERR | FAILED](${el.id})`);
            }
        }
        function gotoPage(endpoint){
            window.location.href = endpoint;
        }
        function escapeHtml(unsafe) {
            return unsafe
                .replace(/&/g, "&amp;")
                .replace(/</g, "&lt;")
                .replace(/>/g, "&gt;")
                .replace(/"/g, "&quot;")
                .replace(/'/g, "&#039;");
        }
